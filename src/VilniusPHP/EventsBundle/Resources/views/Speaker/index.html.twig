{% extends '@VilniusPHPCore/layout.html.twig' %}

{% block body -%}
    <h1>Speaker list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Topic</th>
                <th>Event</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>
                    <a href="{{ path('speaker_show', { 'id': entity.id }) }}">{{ entity.topic }}</a>
                </td>
                <td>
                    <a href={{ path('event_show', { 'id': entity.event.id }) }}>{{ entity.event }}</a>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('speaker_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('speaker_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('speaker_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
